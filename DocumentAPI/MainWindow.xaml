                                </StackPanel>
                            </BlockUIContainer>

                            <!-- Put here to make an empty line -->
                            <Paragraph></Paragraph>

                            <Table>
                                <Table.Columns>
                                    <TableColumn />
                                    <TableColumn />
                                    <TableColumn />
                                </Table.Columns>
                                <TableRowGroup>
                                    <TableRow>
                                        <TableCell ColumnSpan="3" Background="Blue" Foreground="AliceBlue">
                                            <Paragraph Padding="10">Best Baseball Players</Paragraph>
                                        </TableCell>
                                    </TableRow>
                                    <TableRow>
                                        <TableCell Background="White">
                                            <Paragraph>Name</Paragraph>
                                        </TableCell>
                                        <TableCell Background="White">
                                            <Paragraph>Average</Paragraph>
                                        </TableCell>
                                        <TableCell Background="White">
                                            <Paragraph>HRs</Paragraph>
                                        </TableCell>
                                    </TableRow>
                                </TableRowGroup>
                            </Table>

                        </FlowDocument>
                    </FlowDocumentReader>
                </Grid>
            </TabItem>

